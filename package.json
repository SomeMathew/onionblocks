{
	"name": "onionblocks",
	"version": "1.0.0",
	"description": "Decentralized pseudonymous chat room",
	"main": "lib/index.js",
	"engines": {
		"node": "~9.5.0",
		"npm": "~5.6.0"
	},
	"scripts": {
		"flow": "flow",
